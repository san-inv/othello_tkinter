# EditorConfig - エディタ間で一貫したコーディングスタイルを維持
# https://editorconfig.org

root = true

# すべてのファイルに適用
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python ファイル
[*.py]
indent_size = 4
max_line_length = 100

# Markdown ファイル
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML ファイル
[*.{yml,yaml}]
indent_size = 2

# JSON ファイル
[*.json]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
